#!/bin/bash
# Script to get and follow logs of a specific resource

usage () {
	echo "usage: rucio-logs app-name|all"
	echo "    use 'all' to tail logs for the entire EXPERIMENT"
}

APP=$1
if [[ -z $APP ]]; then
	usage
	exit
fi

if [[ $APP == 'all' ]]; then
	oc logs -l release=rucio-$EXPERIMENT -f --max-log-requests 20 --prefix=true

else
	oc logs -l app=$APP -f --max-log-requests 20 --prefix=true
fi
